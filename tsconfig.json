{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "sourceMap": true,
    "strict": true,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "exclude": ["node_modules", "dist"]
}